<RoundedButton@Button>:
    font_size: self.width/10
    color: (221/255, 247/255, 248/255, 1)
    font_name: 'CormorantUnicase-Medium.ttf'
    padding: (5, 5)
    size_hint: (.7, .6)
    background_color: (0, 0, 0, 0)
    background_normal: ''
    background_down: ''
    pos_hint: {'x':.15, 'y':.15}
    text_size: root.width, None
    halign: 'center'
    valign: 'center'

    canvas.before:
        Color:
            rgba: (4/255, 82/255, 86/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<CreateButton@Label>:
    color: (11/255, 21/255, 22/255, 1)
    font_name: 'RobotoMono-Medium.ttf'
    font_size: self.height/5.5
    text_size: root.width, None
    halign: 'center'
    valign: 'center'