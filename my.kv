<ErrorButton>:
    Label:
        text: "Будь ласка перевірте підключення"
        size_hint: (self.width, self.height)
        font_size: self.width/50
        text_size: (self.width, None)
        halign: 'center'
        valign: 'center'
        color:(11/255, 21/255, 22/255, 1)

<CreateWidget>:
    orientation: 'vertical'
    size_hint: 1, None
    height: 310
    AsyncImage:
        source: root.img_pos
        id: photo
        size_hint: (1, .8)
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (.8, .2)
        pos_hint: {'x':.10}
        CreateButton:
            text: root.name_btn
            id: name
            size_hint: (.8, 1)
        CreateButton:
            text: root.grade_btn
            id: grade
            font_size: self.height/4
            size_hint: (.2, 1)


